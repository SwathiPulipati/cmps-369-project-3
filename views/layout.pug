doctype html
html
    head 
        title P3 Contacts 
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/css/bootstrap.min.css", rel="stylesheet", integrity="sha384-aFq/bzH65dt+w6FI2ooMVUpc+21e0SRygnTpmBvdBgSdnuTN7QbdgL+OapgHtvPp", crossorigin="anonymous")
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/js/bootstrap.bundle.min.js")
    body
        if !hide_login
            if user 
                .navbar.bg-primary
                    span(style='color:white').mx-2 #{user.first_name} #{user.last_name} 
                    a(href='/logout').btn.btn-sm.btn-outline-light.mx-2 Logout
            else
                .navbar.bg-primary.justify-content-end
                    a(href='/login').btn.btn-sm.btn-outline-light Sign in
                    a(href='/signup').btn.btn-sm.btn-outline-light.mx-2 Sign up
        .container           
            block content